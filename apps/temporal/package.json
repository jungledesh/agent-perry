{
  "name": "@agent-perry/temporal",
  "version": "1.0.0",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "scripts": {
    "start-worker": "ts-node src/worker.ts",
    "build": "tsc",
    "dev": "ts-node src/worker.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@langchain/openai": "^1.2.0",
    "@temporalio/client": "^1.14.0",
    "@temporalio/worker": "^1.14.0",
    "@temporalio/workflow": "^1.14.0",
    "langchain": "^1.2.2",
    "langsmith": "^0.4.0"
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.1",
    "@prisma/client": "^7.2.0",
    "@temporalio/testing": "^1.14.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.3",
    "jest": "^30.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleNameMapper": {
      "^@temporalio/workflow$": "@temporalio/workflow"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@temporalio)"
    ]
  }
}
